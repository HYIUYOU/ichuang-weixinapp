/* pages/goods_detail/index.wxss */

.img {
  width: 300px;
  display: flex;
  justify-content: center;
  align-items:center;
 
}
.eventList {
  background-color: floralwhite;
  width: 95%;
  height: auto;
  padding: 5px 6px 5px 6px;
  margin: 5px;
}

.title {
  font-size: 14px;
  line-height: 20px;
  color: #535353;
  padding: 10px;
  height: 40px;
  padding-right: 80px;
  position: relative;
}
.goods_deliver {
  padding: 10px;
  border-top: 1px solid #E5E5E5;
  font-size: 10px;
  color: #676767;
}
.goods_infor_pre {
  margin-top: 10px;
  background-color: #FFF;
  padding: 10px;
  min-height: 40px;
}
.goods_infor_txt {
  position: relative;
  padding-left: 10px;
  font-size: 13px;
  line-height: 18px;
}
.goods_infor_raw {
  margin-top: 10px;
  background-color: #FFF;
  padding: 10px;
}
.goods_infor_item {
  font-size: 13px;
  line-height: 18px; 
}
.goods_infor_item text  {
  display: inline-block;
  width: 90px;
}
.goods_detail {
  padding: 0 10px;
  margin-top: 10px;
  background-color: #FFF;
}
.goods_detail_title {
  padding: 10px 0;
  font-size: 14px;
}
.goods_infor_top {
  background-color: #FFF;
}
.price {
  padding: 10px;
  font-size: 16px;
  color: #FF0000;
}

.goods_bottom {
  height: 50px;
}
.goods_bottom_btn {
  position: fixed;
  width: 100%;
  bottom: 0;
  height: 50px;
  z-index: 99;
  background-color: #FFF;
  border-top: 1px solid #E5E5E5;
}
.goods_one {
  width: 25%;
  float: left;
  height: 50px;
}
.goods_half_half {
  width: 25%;
  float: right;
  height: 50px;
  font-size: 12px;
  line-height: 50px;
  text-align: center;
  color: #FFF;
}
.red {
  background-color:red;
}
